<div class="d-flex gap-3" data-controller="my-total-price">
  <div>
    <h4>Price/day: <%= @vehicle.price_per_day.to_i %>â‚¬</h4>
    <h3 class="price-per-day d-none"><%= @vehicle.price_per_day.to_i %></h3>
    <%= simple_form_for([@vehicle, Booking.new], local: true) do |form| %>
    <%= form.input :start_date, label: "Pick your dates", as: :string, input_html: {  data: { datepicker_target: "startDateInput" } } %>
    <%= form.input :end_date, id: "booking_end_date", label: false, as: :string, input_html:  { class: "d-none", data: { datepicker_target: "endDateInput", total_price_target: "endDateInput"} } %>
  </div>

  <div class="total-price line">
    <h3 class="text-awesome price-per-day">Total Price</h3>
    <h4 data-value = "days" data-total-price-target= "total" ></h4>
    <div class="actions btn-airatp-redpink">
      <%= form.button :submit, 'Book', id: "submitBtn", class: "links" %>
    </div>
  </div>
  <% end %>
</div>
